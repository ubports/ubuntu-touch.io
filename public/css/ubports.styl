/* Support for responsive iframes */
.aspect-ratio
  position: relative
  width: 100%
  height: 0
  padding-bottom: 56% /* The height of the item will now be 56% of the width. */

/* More support for responsive iframes */
.aspect-ratio iframe
  position: absolute
  width: 100%
  height: 100%
  left: 0
  top: 0

