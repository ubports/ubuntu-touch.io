// colors
$header_background = #ffffff
$link_color = #e95420
$link_hover_color = #ac3911
$background_color = #ffffff
$text_color = rgb(120, 120, 120)

html
  height 100%
  width 100%

body
  background: $background_color
  font-family: "Ubuntu", "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif;
  font-weight: normal
  color: $text_color

.content
  margin-top: 70px

a
  color: $link_color
  text-decoration: none
  background-color: transparent

a:focus
  outline: thin dotted
  outline: 5px auto -webkit-focus-ring-color
  outline-offset: -2px

a:hover, a:focus
    color: $link_hover_color
    text-decoration: underline

.btn
  border-radius: 0 !important
  border-color: $text_color !important

.btn-white
  color: #fff
  border-color: #fff !important

.btn-white:hover, .btn-white:focus
    color: #e2e2e2

.installer-btn
    text-align center

.btn-xl
    background-color #E95420
    border 0px
    padding 18px 28px
    font-size 20px
    line-height normal
    -webkit-border-radius 8px
    -moz-border-radius 8px
    border-radius 8px

.btn-xl-black, .btn-xl-black:visited
    background-color #000 !important
    border-color #000 !important

.btn-xl-black:hover, .btn-xl-black:focus, .btn-xl-black:active
    background-color #e95420 !important
    color: #fff !important
    border-color #000 !important

.btn-primary, .btn-primary:visited
    background-color $link_color
    border-color #000

.btn-primary:hover, .btn-primary:focus, .btn-primary:active
    background-color $link_hover_color
    border-color #000

